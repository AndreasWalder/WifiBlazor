@page "/AllBills"
@inherits AllInvoicesBase

<h3>Rechnungen</h3>

@if (Bills == null)
{
	
}
else
{
	<table class="table table-bordered table-responsive table-hover">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">RechnungsNr</th>
				<th scope="col">Leistung</th>
				<th scope="col">Datum</th>
				<th scope="col">Firma</th>
				<th scope="col">Bezahlt?</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var bill in Bills)
			{
				<tr>
					<td>@bill.Id</td>
					<td>@bill.InvoiceNr</td>
					<td>@bill.Service</td>
					<td>@bill.DateOfService.ToShortDateString()</td>
					<td>@bill.Company.Name</td>
					<td>@bill.Paid</td>
				</tr>
			}
		</tbody>
	</table>

}